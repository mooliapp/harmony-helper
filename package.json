{
    "name": "harmony-helper",
    "version": "0.1.0",
    "description": "Utility for work with Harmony blockchain",
    "main": "dist/index.js",
    "repository": "git@github.com:mooliapp/harmony-helper.git",
    "author": "lochmatij <romanov.ds35@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "reinstall": "./reinstall.sh",
        "build": "ts-node -O '{\"module\":\"commonjs\"}' scripts/build",
        "tsc": "tsc",
        "deduplicate": "yarn yarn-deduplicate -s fewer yarn.lock",
        "test:bundle": "jest --testNamePattern=BundleTests",
        "test:coverage:bundle": "jest --testNamePattern=BundleTests --coverage",
        "test:dev": "jest --testNamePattern=DevTests",
        "test:manual": "jest --testNamePattern=ManualTests",
        "test": "yarn run test:dev && yarn run test:bundle",
        "prettier:check": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "eslint:check": "eslint . --resolve-plugins-relative-to .",
        "eslint:fix": "eslint --fix . --resolve-plugins-relative-to ."
    },
    "dependencies": {
        "@harmony-js/core": "^0.1.57",
        "@harmony-js/utils": "^0.1.56"
    },
    "devDependencies": {
        "@babel/eslint-plugin": "^7.19.1",
        "@types/jest": "^29.5.0",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "esbuild": "^0.17.16",
        "eslint": "^8.38.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-tsdoc": "^0.2.17",
        "jest": "^29.5.0",
        "prettier": "^2.8.7",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4",
        "yarn-deduplicate": "^6.0.1"
    }
}
